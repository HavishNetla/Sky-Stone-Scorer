<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Mission12">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="M12 - Design &amp; Build: 15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scoreText" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="24sp"
                android:textColor="@color/colorPrimary"/>
        <TextView
                android:text="How many Circles have at least one color-matching Unit Completely In, and Flat Down on the Mat?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textColor="@color/colorPrimary" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/scoreText"
                app:layout_constraintStart_toStartOf="@+id/scoreText"/>
        <SeekBar
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="350dp"
                android:layout_height="32dp"
                android:max="3"
                android:progress="1"
                android:id="@+id/seekBar"
                app:layout_constraintStart_toEndOf="@+id/label"
                app:layout_constraintTop_toTopOf="@+id/label"/>
        <TextView
                android:text="1"
                android:layout_width="32dp"
                android:id="@+id/label" android:layout_height="32dp"
                android:textSize="24sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="@+id/textView21" android:textColor="@color/colorPrimary"/>
        <TextView
                android:text="If there are Independent Stacks at least partly in any Circles, what is the sum of all of their heights?"
                android:layout_width="387dp"
                android:layout_height="41dp"
                android:id="@+id/textView23" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/seekBar" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimary"/>
        <TextView
                android:text="1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/label2" android:textSize="24sp"
                android:textColor="@color/colorPrimary" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView23" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
        <SeekBar
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="350dp"
                android:layout_height="32dp"
                android:max="28"
                android:progress="1"
                android:id="@+id/seekBar2"
                app:layout_constraintStart_toEndOf="@+id/label2"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView23"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>